{
  "extends": "./tsconfig.json",
  "include": ["app/**/*", ".react-router/types/**/*"],
  "exclude": ["node_modules", "build", ".react-router"],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true
  }
} 